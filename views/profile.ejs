<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/home">Bragger</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a href="/<%= userId %> " class="nav-link active" aria-current="page">Your Profile Detail</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
            <form action="/home" method="get" class="d-flex">
                <input class="form-control me-2" type="text" name="search" id="" placeholder="Search By Title">
                <input type="submit" value="Search" class="btn btn-outline-success">
            </form>
          </div>
        </div>
      </nav>
    <a href="/logout">Logout</a>
    <a href="/home "><button>Home</button></a>
    <h2>Your Profile Detail</h2>
    Username : <%= data.userName %> <br><br>
    Email : <%= data.email %> <br>
    <p>Your Location : <%= `${location.city}, ${location.country_name}` %> </p> <br>
    

    <% if(!data.UserDetail) { %>
        <form action="/<%= data.id %>/generateDetail" method="post">
            <button type="submit">Generate Profile Detail</button>
        </form>
    <% } else { %>
        <% if (errors){%> 
            <% errors = errors.split(',') %> 
            <% errors.forEach (el => { %>
            <p style="color: red;"><%= el %> </p>
        <% }) %> 
        <% } %>
        <form action="/<%= data.id %>" method="post">
        Favorite catchphrase
        <input type="text" name="catchphrase" id="" value="<%= data.UserDetail.catchphrase %> "><br><br>
        Gender
        <input type="text" name="gender" id="" value="<%= data.UserDetail.gender %> "><br><br>
        About you :
        <br>
        <textarea name="description" id="" cols="30" rows="10"><%= data.UserDetail.description %></textarea> <br> <br>

        <button type="submit">Edit</button>
    </form>
    <% } %> 
</body>
</html>